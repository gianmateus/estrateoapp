# Configurações do Cliente (Frontend)
REACT_APP_OPENAI_API_KEY=sua_chave_da_openai_aqui

# Configurações do Servidor de Proxy
# Chave de API da OpenAI para o servidor (não será exposta ao cliente)
OPENAI_API_KEY=sua_chave_da_openai_aqui

# Porta para o servidor de proxy (opcional)
PORT=3001

# Credenciais de Administrador
ADMIN_USER=admin
ADMIN_PASSWORD=senha_forte_aqui

# Configurações de Segurança
# Chave para autenticação da API (opcional)
API_SECRET_KEY=chave_secreta_para_api

# Habilitar autenticação de API (true ou false)
ENABLE_AUTHENTICATION=false

# Habilitar limite de requisições (true ou false)
ENABLE_RATE_LIMIT=true

# Máximo de requisições por hora
MAX_REQUESTS_PER_HOUR=100

# Configuração de CORS (opcional, deixe * para permitir todas as origens)
CORS_ORIGIN=* 